<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--LIGHT COLOR THEME-->

    <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
    <color name="color_primary">@color/light_blue_900</color>
    <color name="color_primary_variant">@color/light_blue_900_dark</color>
    <color name="colorPrimaryLight">@color/light_blue_900_light</color>
    <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
    <!--selection controls.-->
    <color name="color_secondary">@color/cyan_a400</color>
    <color name="color_secondary_variant">@color/cyan_a400_dark</color>
    <color name="colorSecondaryLight">@color/cyan_a400_light</color>

    <!--colorBackground appears behind scrollable content and is used for the default window-->
    <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
    <!--and menus. colorError is used to indicate an error state for components such as-->
    <!--text fields.-->
    <color name="color_background">@color/gray_100</color>
    <color name="color_surface">#ffffff</color>
    <color name="color_error">#b00020</color>

    <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
    <!--on which they appear.-->
    <color name="color_on_primary">#FFFFFF</color>
    <color name="color_on_secondary">#FFFFFF</color>
    <color name="color_on_background">#000000</color>
    <color name="colorOnBackgroundLight">@color/gray_900</color>
    <color name="color_on_surface">#000000</color>
    <color name="colorOnSurfaceLight">@color/gray_900</color>
    <color name="color_on_error">#ffffff</color>

    <!--    custom colors   -->
    <color name="light_blue_900">#01579b</color>
    <color name="light_blue_900_light">#4f83cc</color>
    <color name="light_blue_900_dark">#002f6c</color>
    <color name="cyan_a400">#00b8d4</color>
    <color name="cyan_a400_light">#62ebff</color>
    <color name="cyan_a400_dark">#0088a3</color>

    <color name="colorTextSecondary">@color/gray_600</color>
    <color name="colorIconsGray">@color/gray_900</color>
    <color name="colorIcons">#FFFFFF</color>
    <color name="colorDivider">#BDBDBD</color>

    <color name="gray_50">#FAFAFA</color>
    <color name="gray_100">#F5F5F5</color>
    <color name="gray_200">#EEEEEE</color>
    <color name="gray_300">#E0E0E0</color>
    <color name="gray_500">#9E9E9E</color>
    <color name="gray_600">#757575</color>
    <color name="gray_700">#616161</color>
    <color name="gray_800">#424242</color>
    <color name="gray_900">#212121</color>

    <!-- bgl -->
    <color name="bgl_normal">#4CAF50</color>
    <color name="bgl_warn">#FF9800</color>
    <color name="bgl_high">#F44336</color>

    <color name="black_overlay">#66000000</color>
</resources>
