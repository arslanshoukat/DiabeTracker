<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="InputLabelText" parent="TextAppearance.AppTheme.Body1">
        <item name="android:gravity">end</item>
    </style>

    <style name="UnitsWizardLabelTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?textAppearanceHeadline5</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!--Components-->

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>

    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?textAppearanceBody2</item>
    </style>

    <style name="AppEditText" parent="Widget.AppCompat.EditText" />

    <style name="AppEditText.SingleLineNumber">
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppEditText.SingleLineText">
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppEditText.BglWizard" parent="AppEditText.SingleLineNumber">
        <item name="android:maxLength">3</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="AppEditText.RatioWizard">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">4</item>
    </style>

    <style name="AppEditText.DecimalPersonalInfo" parent="AppEditText.RatioWizard">
        <item name="android:maxLength">5</item>
    </style>

    <style name="AppEditText.NamePersonalInfo" parent="AppEditText.SingleLineText">
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="DashboardCardCaption" parent="TextAppearance.AppTheme.Caption">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="DashboardChartCardCaption" parent="TextAppearance.AppTheme.Body2">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="DashboardTitle" parent="TextAppearance.AppTheme.Body1" />

    <style name="DashboardCardValue" parent="TextAppearance.AppTheme.Headline5">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
